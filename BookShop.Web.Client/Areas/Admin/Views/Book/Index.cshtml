@model IEnumerable<BookShop.BLL.ConfigurationModel.BookModel.BookViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
   <button class="btn btn-primary" onclick="location.href='@Url.Action("Create")'"><i class="fa-solid fa-circle-plus"></i> Create</button>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ISBN)
            </th>
            <th>
                Tiêu đề
            </th>
            <th>
                Mô tả
            </th>
            <th>
                Giá bìa
            </th> 
            <th>
               Giá nhập
            </th>
            <th>
                Số lượng
            </th>
            <th>Mã vạch</th>
            <th>
               Ngày xuất bản
            </th>
            <th>
                Trạng thái
            </th>
            <th>
               Tác giả
            </th>
            <th>
                Thể loại
            </th>
            <th>
                Nhà xuất bản
            </th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ISBN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImportPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.Barcode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublicationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                 @foreach (var author in item.authors)
                {
                    <div>@author</div>
                }       
            </td>
            <td>
                 @foreach (var genre in item.genres)
                {
                    <div>@genre</div>
                }      
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SupplierName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id }, new { onclick = "return confirm('Are you sure you want to delete this genre?')" })
            </td>
        </tr>
}
    </tbody>
</table>
<partial name="_Paging" model="@ViewBag.pagingmodel" />