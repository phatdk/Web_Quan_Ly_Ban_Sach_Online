<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thống kê</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <style>

        /* CSS styles for the table */
            table {
                  border-collapse: collapse;
                  width: 100%;

        }

            th, td {
                  padding: 8px;
                  text-align: left;
                  border: 1px solid #ddd;

        }

            th {
                  background-color: #f2f2f2;

        }

    </style>
    <script>
        $(document).ready(function () {
            $.ajax({
                url: "/Admin/Gembox/GetHighestInvoice"
            }).done(function (data) {
                var table = $("<table>");
                var headerRow = $("<tr>");

                // Add table headers
                $("<th>").text("Mã Hóa Đơn").appendTo(headerRow);
                $("<th>").text("Ngày Tạo").appendTo(headerRow);
                $("<th>").text("Tổng Tiền").appendTo(headerRow);

                headerRow.appendTo(table);

                for (var i = 0; i < data.length; i++) {
                    var invoice = data[i];
                    var row = $("<tr>");

                    // Add invoice data to table cells
                    $("<td>").text(invoice.id).appendTo(row);
                    $("<td>").text(invoice.createdDate).appendTo(row);
                    $("<td>").text(invoice.total).appendTo(row);

                    row.appendTo(table);
                }

                $(".high-value-invoices").append(table);
            });
        });
    </script>
</head>
<body>

    <div class="statistics-container">
        <h1>Hóa đơn giá trị cao</h1>
        <div class="high-value-invoices">
        </div>
    </div>

</body>
</html>
