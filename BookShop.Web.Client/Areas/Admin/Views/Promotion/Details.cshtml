@model BookShop.BLL.ConfigurationModel.PromotionModel.PromotionViewModel

@{
    ViewData["Title"] = "Chi tiết khuyến mãi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Chi tiết khuyễn mãi</h1>

<div>
 
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
             Tên khuyến mãi
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Mã code:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dt class = "col-sm-2">
            Số tiền tối thiểu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Condition)
        </dd>
        <dt class = "col-sm-2">
            Thời hạn lưu trữ
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StorageTerm)
        </dd>
        <dt class = "col-sm-2">
            Số tiền giảm:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AmountReduct)
        </dd>
        <dt class = "col-sm-2">
            Phần trăm giảm:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PercentReduct)
        </dd>
        <dt class = "col-sm-2">
            Giảm tối đa theo phần trăm: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReductMax)
        </dd>
        <dt class = "col-sm-2">
            Số lượng: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class = "col-sm-2">
           Mô tả:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Loại khuyến mãi:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NameType)
        </dd>
        <dt class="col-sm-2">
            Ngày tạo: 
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
        <dt class="col-sm-2">
            Ngày bắt đầu
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class="col-sm-2">
           Ngày kết thúc
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class="col-sm-2">
            Trạng thái: 
        </dt>
        <dd class="col-sm-10">
            @if( Model.Status == 1)
            {
                @Html.DisplayName("Mở")
            } else
            {
                @Html.DisplayName("Đóng")
            }
        </dd>
 
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id =Model.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
