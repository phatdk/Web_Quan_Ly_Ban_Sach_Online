@model IEnumerable<BookShop.BLL.ConfigurationModel.WorkShiftsModel.WorkShiftsViewModel>

@{
    ViewData["Title"] = "Danh sách ca làm việc";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Tạo mới</a>
</p>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Ca làm việc</th>
            <th>Thời gian</th>
            <th>Ngày tạo</th>
            <th>Trạng thái</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Shift</td>
                <td>@item.Time</td>
                <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Sửa</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Chi tiết</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"
                       data-confirm="Bạn có chắc muốn xóa mục này không?">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
