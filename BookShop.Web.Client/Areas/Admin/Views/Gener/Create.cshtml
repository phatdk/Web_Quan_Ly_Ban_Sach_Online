@using BookShop.BLL.ConfigurationModel.CategoryModel
@model BookShop.BLL.ConfigurationModel.GenreModel.CreateGenreModel

@{
    ViewData["Title"] = "Create";
    List<CategoryModel> categorys = ViewBag.Categorys;
}

<h1>Create</h1>

@using (Html.BeginForm(FormMethod.Post))
{
	<div style="width: 500px">
        <div class="form-group">
		@Html.Label("Tên thể loại")
		@Html.TextBoxFor(m => m.Name, new { @class = "form-control short" })
		</div>

		@*<div class="form-group">
			@Html.Label("Index")
			@Html.TextBoxFor(m => m.Index, new { @class = "form-control short" })
		</div>*@

		<div class="form-group">
			@Html.Label("Status")
			@Html.TextBoxFor(m => m.Status, new { @class = "form-control short" })
		</div>
		 
		<div class="form-group">
			@Html.Label("Danh mục")
			@Html.DropDownListFor(m => m.Id_Category, new SelectList(categorys, "Id","Name"), "-- Select Collection --", new { @class = "form-control chosen-				select" })

		</div>
    </div>
<br />
	<button type="submit" class="btn btn-primary">Create</button>
}
