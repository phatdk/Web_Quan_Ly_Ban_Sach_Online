@using BookShop.BLL.ConfigurationModel.CategoryModel
@model BookShop.BLL.ConfigurationModel.GenreModel.CreateGenreModel

@{
	ViewData["Title"] = "Create";
	List<CategoryModel> categorys = ViewBag.Categorys;
}

<style>
	.form-group.cus {
		display: flex;
		justify-content: space-between;
	}
</style>
<h1 style="text-align:center;">Thêm mới danh mục</h1>


@using (Html.BeginForm("Create", "Gener", FormMethod.Post))
{
	<div class="row" style="justify-content: center;">
		<div style="width: 500px">
			<div class="form-group">
				@Html.Label("Tên thể loại")
				@Html.TextBoxFor(m => m.Name, new { @class = "form-control short" , @required = "required", @maxlength = "50", @pattern = @"^[^\d@\x25&$*]+$"})
			</div>

			@*<div class="form-group">
		@Html.Label("Index")
		@Html.TextBoxFor(m => m.Index, new { @class = "form-control short" })
		</div>*@

			<div class="form-group" style="margin-bottom:20px">
				<label asp-for="Status" class="control-label"></label>
				<select asp-for="Status" class="form-control">
					<option value="1">Hoạt động</option>
					<option value="0">Không hoạt động</option>
				</select>
				<span asp-validation-for="Status" class="text-danger"></span>
			</div>

			<div class="form-group">
				@Html.Label("Danh mục")
				@Html.DropDownListFor(m => m.Id_Category, new SelectList(categorys, "Id","Name"), "-- Select Collection --", new { @class = "form-control chosen-				select" })

			</div>
			<div class="form-group cus">
				<a asp-action="Index">Xem danh sách danh mục</a>
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		</div>
	</div>
}
