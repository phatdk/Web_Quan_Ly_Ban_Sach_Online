@using BookShop.BLL.ConfigurationModel.BookModel;
@model BookShop.BLL.ConfigurationModel.ProductModel.CreateProductModel
@{
	ViewData["Title"] = "Create";
	List<BookViewModel> listBook = ViewBag.listBook;
	List<BookViewModel> selected = ViewBag.selectedBook;
}
<h4>Create Product</h4>
<div class="row">

	<div class="col-4">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger" />

			<div class="form-group">
				<label asp-for="Name" class="control-label"></label>
				<input id="prod-name" asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Quantity" class="control-label"></label>
				<input id="prod-number" asp-for="Quantity" class="form-control" />
				<span asp-validation-for="Quantity" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Price" class="control-label"></label>
				<input id="prod-price" asp-for="Price" class="form-control" />
				<span asp-validation-for="Price" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Description" class="control-label"></label>
				<textarea id="prod-description" asp-for="Description" class="form-control"></textarea>
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>

			<div class="form-group">
				<input id="prod-save" type="button" class="btn btn-primary" value="Save" />
			</div>
		</form>
	</div>
	<div class="col-3">
		<h4>List sách</h4>
		<div class="border-1 bg-light">
			<select id="selectedBook" data-placeholder="Chọn sách cho sản phẩm" class="chosen-select" multiple style="width: 100%;">
				<option value=""></option>
				@foreach (var item in listBook)
				{
					<option value="'@item.Id'">@item.Title</option>
				}
			</select>
		</div>
		<button onclick="selectedBookList()">send</button>
	</div>
	<div class="col-5">
		<img id="img-selected" src="" alt="product img" style="width: 70%"/>
		<input id="img-input" type="file" accept=".png,.jpg,.png" />
	</div>
</div>

<script src="/js/Area/Admin/Product.js"></script>
