
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Document</title>
	<link href="~/css/Admin/style.css" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

	@* <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"> *@
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

	@* <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"> *@
	<link rel="stylesheet" href="~/lib/fontawesome-6.4.2/css/all.min.css" />

	<!-- Bootstrap JS and dependencies -->

	<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
	@* <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script> *@
	<script src="~/lib/bootstrap/dist/js/bootstrap.min.js" />

	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment.min.js"></script>
	<script src="~/js/layout.js"></script>
	<link rel="stylesheet" href="~/lib/chosen_v1.8.7/chosen.min.css" />
	<link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
	<link rel="stylesheet" href="/css/Admin/Responsive.css">
	<link rel="stylesheet" href="/css/Admin/style.css">
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v6.0.0/css/all.css" />
	<!-- Google Fonts Roboto -->
	<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" />
	<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.min.js" integrity="sha512-d9xgZrVZpmmQlfonhQUvTR7lMPtO7NkZMkA0ABN3PHCbKA5nqylQ/yWlFAyY6hYgdF1Qh6nYiuADWwKB4C2WSw=="
			crossorigin="anonymous"></script>
</head>
<body>
	<div class="sidebar close">
		<div class="logo">
			<i class="fab fa-trade-federation"></i>
			<span class="logo-name">ADMIN</span>
		</div>

		<ul class="nav-list">
			<li>
				<a href="#">
					<i class="fab fa-microsoft"></i>
					<span class="link-name">Bàn làm việc</span>
				</a>

				<ul class="sub-menu blank">
					<li><a href="" class="link-name">Quản đơn hàng</a></li>
					<li><a asp-area="Admin" asp-controller="OrderManage" asp-action="Index">Quản lý đơn hàng</a></li>
				</ul>
			</li>

			<li>
				<div class="icon-link">
					<a href="#">
						<i class="fab fa-codepen"></i>
						<span class="link-name">Quản lí sản phẩm</span>
					</a>
					<i class="fas fa-caret-down arrow"></i>
				</div>

				<ul class="sub-menu">
					<li><a href="#" class="link-name">Sản Phẩm</a></li>
					<li><a asp-area="Admin" asp-controller="Product" asp-action="Index">Danh sách sản phẩm</a></li>

				</ul>
			</li>

			<li>
				<div class="icon-link">
					<a href="#">
						<i class="fab fa-blogger"></i>
						<span class="link-name">Quản lí sách</span>
					</a>
					<i class="fas fa-caret-down arrow"></i>
				</div>

				<ul class="sub-menu">
					<li><a href="#" class="link-name">Quản lí sách</a></li>
					<li>
						<a asp-area="Admin" asp-controller="Book" asp-action="Index"> Sách</a>
					</li>
					<li>
						<a asp-area="Admin" asp-controller="Author" asp-action="Index"> Tác giả</a>
					</li>
					<li>
						<a asp-area="Admin" asp-controller="Suppliers" asp-action="Index">Nhà xuất bản</a>
					</li>
					<li>
						<a asp-area="Admin" asp-controller="Gener" asp-action="Index"> Thể loại</a>
					</li>
					<li>
						<a asp-area="Admin" asp-controller="Categories" asp-action="Index"> Danh mục</a>
					</li>
				</ul>
			</li>

			<li>
				<div class="icon-link">
					<a href="#">
						<i class="fab fa-blogger"></i>
						<span class="link-name">Quản lí khuyến mãi</span>
					</a>
					<i class="fas fa-caret-down arrow"></i>
				</div>

				<ul class="sub-menu">
					<li><a href="#" class="link-name">Khuyến mãi</a></li>
					<li>
						<a asp-area="Admin" asp-controller="Promotion" asp-action="Index">Quản lí khuyến mãi</a>
					</li>

				</ul>
			</li>
			<li>
				<a href="#">
					<i class="fas fa-gear"></i>
					<span class="link-name">Settings</span>
				</a>
				<ul class="sub-menu blank">
					<li><a href="#" class="link-name">Settings</a></li>
				</ul>
			</li>

			<li>
				<form asp-area="Identity" asp-controller="Account" asp-action="LogOff" style="height: 100%">
					<button style=" background-color: inherit; border: none">
						<i class="fa-solid fa-right-from-bracket"></i><span class="link-name" style="color:white; font-size:18px;font-weight:500;">Đăng xuất</span>
					</button>
				</form>
			</li>
		</ul>
	</div>

	<div class="home-section">
		<div class="home-content">
			<i class="fas fa-bars"></i>
			<span class="text">Trẻ Thơ Shop</span>
		</div>
		<div class="main-content">
			<div class="container">
				@RenderBody()
			</div>
		</div>
	</div>

	@await RenderSectionAsync("Scripts", required: false)
	<script src="~/lib/chosen_v1.8.7/docsupport/jquery-3.2.1.min.js" type="text/javascript"></script>
	<script src="~/lib/chosen_v1.8.7/chosen.jquery.js" type="text/javascript"></script>
	<script src="~/lib/chosen_v1.8.7/docsupport/prism.js" type="text/javascript" charset="utf-8"></script>
	<script src="~/lib/chosen_v1.8.7/docsupport/init.js" type="text/javascript" charset="utf-8"></script>
</body>
<script src="~/js/app.js"></script>
</html>
