@using BookShop.BLL.ConfigurationModel.OrderModel;
@using BookShop.BLL.IService;
@using BookShop.BLL.Service;
@model List<OrderViewModel>
@inject IProductService ProductService
@inject IOrderDetailService OrderDetailsService
@{
    ViewData["Title"] = "Đơn chờ xác nhận";
    Layout = "_LayoutViewBill";
    var total = 0;
}


<style>
    .khanhdeptrai {
        height: 400px;
        overflow: auto;
    }
</style>
<partial name="_StatusMessage"></partial>
<h1 class=" text-capitalize">@ViewData["Title"]</h1>
<div class="container khanhdeptrai">
    @if (Model.Count > 0)
    {
        @foreach (var bill in Model)
        {
            var BillDetails = await OrderDetailsService.GetByOrder(bill.Id);

            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="card-title"><a asp-action="DetailsBill" asp-controller="Manage" asp-route-id="@bill.Id">Mã đơn:@bill.Code</a></h5>
                    <h6 class="card-subtitle mb-2 text-muted">Status: @bill.StatusName</h6>
                    <p class="card-text">User: @bill.NameUser</p>
                    <p class="card-text">Thời gian @bill.CreatedDate</p>
                    @*   <p class="card-text">Mã đơn : @bill.Code</p> *@
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Sản phẩm</th>
                                <th>Giá</th>
                                <th>Số lượng</th>
                                <th>Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in BillDetails)
                            {
                                var product = await ProductService.GetById(item.Id_Product);
                                total += item.Price * item.Quantity;
                                <tr>
                                    <td>@product.Name</td>
                                    <td>@item.Price.ToString("N0")</td>
                                    <td>@item.Quantity</td>
                                    <th>@(item.Price * item.Quantity)</th>
                                </tr>

                            }
                          

                            <a class="btn btn-danger" asp-area="" asp-action="DeleteOrderLoading" asp-controller="Order" asp-route-id="@bill.Id">Huỷ đơn</a>
                            
                        </tbody>
                    </table>
                </div>

            </div>
        }
    }
    else
    {
        <p>Hiện chưa có đơn hàng nào</p>
    }


</div>
<partial name="_Paging" model="@ViewBag.pagingmodel" />