@using System.Collections.Generic
@using BookShop.DAL.Entities;
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Authentication;
@using Microsoft.AspNetCore.Authentication;
@model LoginViewModel
@inject SignInManager<Userr> SignInManager

@{
    ViewData["Title"] = "Đăng nhập";
}
<style>
    .dnkq{
        text-align:center;
    }
    .oi{
        justify-content:center;
    }
</style>
<section class="login_box_area section_gap">
    <div class="container">
        <div class="row oi">
            <div>
                <div class="login_form_inner">
                    <h3>Log in to enter</h3>
                    @if (!string.IsNullOrEmpty(ViewBag.Error))
                    {
                        <p class="text-danger">@ViewBag.Error</p>
                    }
                    <form class="row login_form" asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                        <div class="col-md-12 form-group">
                            <label>Tài Khoản</label>
                            <input asp-for="UserNameOrEmail" type="text" class="form-control" placeholder="Nhập Sđt/Email">
                                 <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <label>Mật Khẩu</label>
                            <input asp-for="Password" type="password" class="form-control" id="name" placeholder="Nhập mật khẩu">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <div class="creat_account">
                                <label asp-for="RememberMe">
                                    <input asp-for="RememberMe" />
                                    @Html.DisplayNameFor(m => m.RememberMe)
                                </label>
                            </div>

                        </div>
                        <div class="form-group dnkq">
                            <button type="submit" value="submit" class="btn btn-primary">Đăng Nhập</button><br />
                            <a asp-action="ForgotPassword">Forgot Password?</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


