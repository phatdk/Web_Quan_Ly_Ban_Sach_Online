@model IEnumerable<BookShop.BLL.ConfigurationModel.CartDetailModel.CartDetailViewModel>

@{
    ViewData["Title"] = "Giỏ Hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
﻿@using BookShop.BLL.ConfigurationModel.CartDetailModel;
<style>
    .giohangtong {
        width: 100%;
        margin-top: 20px;
        background-color: white;
        border-radius:10px;
        padding: 1%;
    }

        .giohangtong .table {
            width: 100%;
            border-collapse: collapse;
            border:none;
        }

    th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }

    tr th {
        background-color: #f2f2f2;
    }

    input[type="number"] {
        width: 50px;
        text-align: center;
    }

    input[type="checkbox"] {
        transform: scale(1.5);
    }

    .tongketgiohang {
        height:35px;
        display:flex;
    }
    .tongketgiohang p{
        margin-top:2px;
    }
    .thanhtoangiohang{
        justify-content:flex-end;
    }
    .thanhtoangiohang button{
        border:none;
        border-radius:7px;
    }
    .thanhtoangiohang button:hover{
                background-color: red;
                color: black;
    }
    .item1 {
        flex-grow: 2;
    }
    .nosanpham{
        background-color:white;
        text-align:center;
        padding:10px;
    }
</style>
<table>
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Product Price</th>
            <th>Total Price</th>
            <th>Select</th>
            <th>Option</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr id="pdc-@item.Id">
                <td>@item.ProductName</td>
                <td>
                    <input type="number" value="@item.Quantity" min="1" />
                </td>
                <td>@item.ProductPrice</td>
                <td>@item.TotalPrice</td>
                <td>
                    <input type="checkbox" @(item.IsSelected ? "checked" : "") />
                </td>
                <td>
                    <button onclick="removeProduct('@item.Id_Product')">Xóa</button>
                </td>
            </tr>
        }
    </tbody>
</table>
@if (Model.Count() != 0)
        {
<h3>
    <p>Giỏ hàng</p>
</h3>
<div class="giohangtong">
    <table class="table">
        <tbody>
            <tr>
                <th></th>
                <th>Product</th>
                <th>Quantity</th>
                <th>Product Price</th>
                <th>Total Price</th>
                <th>Option</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" @(item.IsSelected ? "checked" : "") />
                    </td>
                    <td>@item.ProductName</td>
                    <td>
                        <input type="number" value="@item.Quantity" min="1" />
                    </td>
                    <td>@item.ProductPrice</td>
                    <td>@item.TotalPrice</td>
                    <td>
                        <button class="btn btn-btn-waning" onclick="removeProduct('@item.Id_Product')">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z" />
                                <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z" />
                            </svg>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <hr />
    <div class="tongketgiohang">
        <p>Thành Tiền: <span id="totalCost">@Model.Sum(x => x.IsSelected ? x.TotalPrice : 0)</span></p>
        <div class="item1"></div>
        <div class="thanhtoangiohang">
                <button id="buyNow">Thanh Toán</button>
        </div>
    </div>
</div>
}
else
{
    <div class="nosanpham">
        <h2>Chưa có sản phẩm được thêm vào</h2>
        <a type="button" xc asp-area="" asp-controller="Home" asp-action="DanhSachSanPham">MUA SẮM NGAY</a>
    </div>
}

@section scripts {
    <script>

        $(document).ready(function () {
            updateTotalCost();

            $('input[type="checkbox"]').change(function () {
                updateTotalCost();
            });

            $('input[type="number"]').change(function () {
                updateTotalCost();
            });

            function updateTotalCost() {
                var totalCost = 0;

                $('tbody tr').each(function () {
                    var checkbox = $(this).find('input[type="checkbox"]');
                    var quantityInput = $(this).find('input[type="number"]');
                    var productPrice = parseInt($(this).find('td:eq(3)').text());
                    var isSelected = checkbox.is(":checked");
                    var quantity = parseInt(quantityInput.val());

                    var individualCost = quantity * productPrice;

                    $(this).find('td:eq(4)').text(individualCost);

                    if (isSelected) {
                        totalCost += individualCost;
                    }
                });

                $('#totalCost').text(totalCost);
            }
        });
    </script>
    <script type="text/javascript">
        function removeProduct(productId) {
            $.ajax({
                type: "POST",
                url: "/Cart/RemoveProduct",
                data: { id: productId },
                success: function (result) {
                },
                error: function (error) {
                    console.error("Error removing product:", error);
                }
            });
        }
    </script>


}
